* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

.header {
  background: url(img/cardspot.png) top left/1000px no-repeat, url(img/cardspottwo.png) top left no-repeat, url(img/background.header.png) center/cover;
  padding: 30px 0 0 0;
}

.header__one {
  display: flex;
  justify-content: space-between;
}

.links__header {
  display: flex;
  margin-top: 10px;
}

.linktwo {
  margin-left: 50px;
}

.linkthree {
  margin-left: 50px;
}

.link {
  text-decoration: none;
  display: inline-block;
  color: #FFFFFF;
}
.link:after {
  display: block;
  content: "";
  height: 2px;
  width: 0;
  background-color: #E53175;
  transition: width 0.4s ease-in-out;
}

.link :hover:after,
.link :focus:after {
  width: 100%;
}

.hair__link {
  font-family: "intro-light", Calibri, sans-serif;
  font-style: normal;
  font-weight: 300;
  font-size: 20px;
  line-height: 20px;
  letter-spacing: 0.03em;
}

.header__flex {
  display: flex;
  justify-content: space-between;
}

.header__logo {
  margin-right: 41px;
  text-decoration: none;
}

.container {
  max-width: 1160px;
  height: 100%;
  padding: 0 10px;
  margin: 0 auto;
}

.intro {
  margin: 0 0 0 0;
  height: 950px;
  position: relative;
}

.intro__wrap {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  background: url(img/maskbottle.png) no-repeat;
  background-position: 150px;
}

.item__title {
  max-width: 506px;
  padding-left: 16px;
  color: #FFFFFF;
  margin-top: 188px;
}

.item__decor {
  display: inline-block;
  color: #FFFFFF;
  font-family: intro-light, sans-serif;
  font-size: 20px;
  max-width: 537px;
  line-height: 30px;
  font-style: normal;
  font-weight: 300;
  letter-spacing: 0.03em;
  margin-top: 28px;
}

.intro__gradient {
  width: 100%;
  height: 280px;
  position: absolute;
  background: linear-gradient(transparent, black);
  bottom: 30px;
}

.item__head {
  font-weight: 400;
  font-size: 50px;
  font-family: oswald, sans-serif;
  font-style: normal;
  line-height: 74px;
  letter-spacing: 0.08em;
}

form {
  position: relative;
  width: 300px;
  margin: 0 auto;
  height: 42px;
}

input {
  height: 42px;
  width: 0;
  padding: 0 42px 0 15px;
  border: none;
  border-bottom: 2px solid transparent;
  outline: none;
  background: transparent;
  transition: 0.4s cubic-bezier(0, 0.8, 0, 1);
  position: absolute;
  top: 0;
  right: 0;
  z-index: 2;
}
input:focus {
  width: 300px;
  z-index: 1;
  border-bottom: 2px solid #FFFFFF;
}

.button__submit {
  height: 42px;
  width: 42px;
  position: absolute;
  top: 0;
  right: 0;
  cursor: pointer;
  background: url(img/serchitem.png) no-repeat;
  border: none;
}

.header__two {
  display: flex;
}

.buttoncard {
  display: flex;
  position: relative;
  margin-top: 85px;
  margin-right: 300px;
  justify-content: center;
}

.buy {
  border: 1px solid #E53175;
  padding: 8px 50px 8px 50px;
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 16px;
  font-family: "Lato", sans-serif;
  color: #FFFFFF;
  cursor: pointer;
}

.main__block {
  overflow-x: hidden;
  display: flex;
  background-color: black;
  min-height: 500px;
  max-height: 800px;
}

.main__about {
  background: url(img/spotblock2.png) center 20px/550px no-repeat, url(img/backgroundblock2.png) no-repeat;
  margin-left: 7%;
  margin-top: 10%;
  margin-right: 7%;
  margin-bottom: 1%;
}

.girl {
  position: relative;
  right: -550px;
  top: -393px;
}

.main__flex {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 50px;
  padding-left: 300px;
  margin-right: 200px;
  width: 45%;
  max-height: 50%;
  top: 80px;
  right: 60px;
}

.style__about {
  font-weight: 600;
  font-size: 50px;
  color: #FFFFFF;
  font-family: Arial, Helvetica, sans-serif;
  line-height: 1.5;
}

.style__aboutus {
  color: #FFFFFF;
  font-weight: lighter;
  text-align: center;
}

.text {
  color: #FFFFFF;
  font-weight: 100;
  font-size: 49px;
  font-family: Arial, Helvetica, sans-serif;
  line-height: 0.5;
}

.this {
  position: relative;
  right: -45%;
  bottom: 4%;
}

.brand {
  position: relative;
  right: -50%;
  bottom: -2%;
}

.done {
  position: relative;
  right: -40%;
  bottom: -8%;
}

.foryou {
  position: relative;
  right: -50%;
  bottom: -12%;
}

.main__card {
  display: flex;
  justify-content: center;
  padding: 150px 0;
  background-color: black;
  background: url(img/spotend.png) right no-repeat, url(img/spotstart.png) left no-repeat, url(img/spotmiddle.png) center no-repeat, black;
}

.card {
  display: flex;
  flex-direction: column;
}

.forface {
  margin-left: 20%;
  font-weight: 600;
  font-size: 50px;
  color: #FFFFFF;
  font-family: Arial, Helvetica, sans-serif;
  line-height: 1.5;
  margin-bottom: 20px;
}

.smalltext {
  margin-left: 20%;
  max-width: 320px;
  color: #FFFFFF;
  font-family: Arial, Helvetica, sans-serif;
  padding-bottom: 50px;
}

.text3card {
  background-color: black;
  max-height: 800px;
}

.card__button {
  border: 1px solid transparent;
  border-image: linear-gradient(to right, #FFFFFF, rgb(59, 55, 55));
  -moz-border-image: -moz-linear-gradient(left, white, rgb(59, 55, 55));
  -webkit-border-image: -webkit-linear-gradient(left, white, rgb(59, 55, 55));
  border-image-slice: 1;
  padding: 2px 30px;
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 15px;
  font-family: "Lato", sans-serif;
  color: #FFFFFF;
  white-space: nowrap;
}

.card__button_flex {
  display: flex;
  justify-content: center;
  text-align: center;
  box-sizing: border-box;
}

.footer {
  background-color: black;
}

.footer__items {
  display: flex;
  justify-content: center;
  min-width: 780px;
  padding-left: 50px;
}

.items__footer {
  display: flex;
  flex-direction: column;
  min-width: 360px;
  min-height: 134px;
  margin-top: 95px;
  line-height: 2;
  color: #FFFFFF;
}

.footer__href {
  color: #FFFFFF;
  text-decoration: none;
}

.count {
  display: flex;
  margin-bottom: 100px;
}
.count .change {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25px;
  height: 25px;
  font-weight: 600;
  color: #fff;
  background-color: #35e201;
  border-radius: 3px;
  cursor: pointer;
}
.count .minusmin {
  background-color: #989797;
}

.input {
  max-width: 55px;
  text-align: center;
  font-weight: 700;
  background-color: #fff;
  border: none;
  border-radius: 3px;
  margin: 0 5px;
}

